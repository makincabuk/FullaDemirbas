@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<p align="right"><a href="/AdminCategory/AddCategory" class="btn btn-info ">Yeni Kategori</a></p>
<br />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger btn"><i class="fas fa-trash">
</i>   Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-info btn"><i class="fas fa-pencil-alt">
</i>    Güncelle</a></td>
            <td><a href="#" class="btn btn-primary btn">
    <i class="fas fa-folder">
    </i>    Detay
</a></td>
        </tr>
    }
</table>