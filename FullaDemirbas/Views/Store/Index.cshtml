
@using EntityLayer.Concrete
@model List<Store>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<p align="right">
    <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">
        Mağaza Ekle
    </button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    Mağaza Bilgilerini Giriniz
                </div>
                <form method="post" action="/Store/AddStore">
                    <div class="modal-body">
                        <label>Mağaza Adını</label>
                        <input type="text" name="StoreName" class="form-control" />
                        <br />
                        <button class="btn btn-info">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</p>


